# .env.example
# Este archivo contiene variables de entorno de ejemplo para VoxUnity AI+.
# Copia este archivo a .env y modifica los valores según sea necesario.

# --- Configuración de la API ---
API_HOST=127.0.0.1
API_PORT=5000
API_DEBUG=False

# --- Configuración de Base de Datos ---
# DATABASE_URL=sqlite:///./data/voxunity.db
# Para PostgreSQL (descomentar y configurar):
# DATABASE_URL=postgresql://user:password@host:port/dbname

# --- Configuración de Seguridad ---
# Clave secreta para Flask (sesiones, etc.) - ¡GENERAR UNA ÚNICA Y SEGURA EN PRODUCCIÓN!
# Puedes generar una con: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=your_flask_secret_key_here

# Clave de cifrado para datos sensibles (ej. diario de terapia)
# Generar con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# --- Configuración de Internacionalización ---
DEFAULT_LANG=en

# --- Habilitar/Deshabilitar Módulos (True/False) ---
MODULE_VOICE_ENABLED=True
MODULE_STREAMING_ENABLED=True
MODULE_ALLY_ENABLED=True
MODULE_THERAPY_ENABLED=True
MODULE_VTUBER_ENABLED=True
MODULE_ACTIVISM_ENABLED=True
MODULE_EDUCATOR_ENABLED=True
MODULE_MOBILE_ENABLED=True
MODULE_DEVTOOLS_ENABLED=True
MODULE_ACCESSIBILITY_ENABLED=True

# --- Configuración Específica de Módulos (Opcional) ---
# Mod-Voice
# VOICE_OBS_WEBSOCKET_URL=ws://localhost:4444
# VOICE_AUDIORELAY_IP=192.168.1.100

# Mod-Activism
# ACTIVISM_TOR_PROXY=socks5://127.0.0.1:9050
# ACTIVISM_MATRIX_SERVER=https://matrix.org
